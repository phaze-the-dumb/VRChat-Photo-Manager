{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "vrchat-photo-manager",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "./icons/icon.ico",
      "title": "VRChat Photo Manager"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true, 
        "request": true,
        "scope": [ "https://photos.phazed.xyz/*" ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "VRChat Photo Manager",
        "width": 1100,
        "height": 580,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "https://photos.phazed.xyz"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "uk.phaz.vrcpm",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ]
    }
  }
}
